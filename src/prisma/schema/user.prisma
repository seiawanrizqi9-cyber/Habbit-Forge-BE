model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String        // akan di-hash dengan bcrypt
  username      String        @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Relasi 1:1 dengan Profile
  profile       Profile?
  
  // Relasi 1:N dengan Habit
  habits        Habit[]
  
  // Relasi 1:N dengan CheckIn (melalui habit)
  checkIns      CheckIn[]     @relation("UserCheckIns")
  
  // Token untuk reset password (opsional)
  resetToken    String?
  resetExpires  DateTime?
  
  @@map("users")
}